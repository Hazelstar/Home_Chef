<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat-header"><h1> @chatroom.name</h1></div>
        <div class="messages" id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <%= render "messages/message", message: message %>
          <% end %>
        </div>
        <div id="create_message">
          <%= simple_form_for [current_user, @chatroom, @message], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
          <% end %>
        </div>
    </div>
  </div>
</div>




