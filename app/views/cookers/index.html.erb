<div class="mt-5">
  <% if @cookers.any? %>
    <div class="container">
      <div class="row pb-5 mb-5">
        <% @cookers.each do |cooker| %>
          <div class="col-4">
             <%= link_to cooker_path(cooker) do %>
            <div class="card-cooker pb-1">
                <%= cl_image_tag(cooker.photo.key, radius: 5, class: "w-100") %>
              <h3 class="mt-3"><%= cooker.first_name.capitalize %> <%= cooker.last_name.capitalize %></h3>
              <p class="m-0"><%= cooker.address.nil? ? "No address" : cooker.address.capitalize %></p>
              <p class="mb-1"><%= cooker.price %>â‚¬</p>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
      <div class="container text-center">
        <h4 class="header">Oh no! There are no cooks available yet...</h4>
      </div>
  <% end %>
</div>
