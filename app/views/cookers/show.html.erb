<div class="profile" style="margin-top: 5vh; margin-bottom: 5vh;">
  <div class="profile-layout row">

    <!-- Left column that statically displays users info -->
    <div class="info col-6 p-4">

      <div class="d-flex align-items-center p-4 mb-3">
       <!--  profile img -->
       <div>
        <%= cl_image_tag @cooker.photo.key, :class => "rounded-circle", height: 150, width: 150, crop: :fill if current_user.photo.attached? %>
      </div>

      <!-- welcome msg -->
      <div class="ml-5">
        <h1>Hello, I'm <%= @cooker.first_name.capitalize %>!</h1>
        <p><i class="fas fa-home"></i> <%= @cooker.address %></p>
      </div>
    </div>

    <!-- infos -->
    <div class="p-3">

        <div class="d-flex justify-content-space-evenly">
          <div class="mx-5 text-center" id="cook-display">
            <h6 class="m-1">My favorite utensil: the pan</h6>
          </div>
          <div class="mx-5 text-center" id="cook-display">
            <h6 class="m-1"><i class="fas fa-euro-sign"></i> <%= @cooker.price %>/ hour</h6>
          </div>
        </div>

      <!-- User's bio -->
      <% if @cooker.bio == nil %>
        <h3 class="ml-3">Oh no, @cooker.first_name hasn't filled in their info yet!</h3>
      <% else %>
      <div class="bio my-5">
        <i class="fas fa-quote-left"></i>
        <p class="p-3"><%= @cooker.bio %></p>
        <i class="fas fa-quote-right"></i>
      </div>
      <% end %>
    </div>

      <!-- Message chat button -->
      <button type="button" class="btn-effect btn-profile" id="message-me-display"> <!-- data-toggle="modal" data-target="#exampleModalCenter" -->
        <h3>Message me!</h3>
      </button>

      <!-- Book me button + modal -->
      <button type="button" class="btn-effect btn-profile" id="book-me-display" data-toggle="modal" data-target="#exampleModalCenter">
        <h3>Book me!</h3>
      </button>

  </div> <!-- closes left column -->


  <!-- Right column that dynamically displays sections -->
  <div class="col-6 p-4" id="content-column">
    <div class="d-flex justify-content-center p-4">

      <!-- This is the display of the messages box -->
      <div class="content-display messages-display" style="display:none;">
        <h3 class="mb-5 mt-2 text-center">Chat with @cooker.first_name:</h3>
        <p>Hellooooooo I'm the message!</p>
      </div>

      <!-- This is the display of the availabilities index -->
      <div class="content-display availabilities-display">

        <% if @cooker.availabilities.any? %>
          <h3 class="mb-3 mt-2 text-center">My schedule:</h3>

            <div class="d-flex justify-content-center">
              <%= link_to new_user_availability_path(current_user.id) do %>
                <button class="text-center btn-effect">
                  <h3>Add availability</h3>
                </button>
                <% end %>
            </div>

          <!-- List of availabilities TO BE CHANGES INTO A CALENDAR DISPLAY -->
          <ul>
            <% @cooker.availabilities.each do |availability| %>
              <li>
                <%= availability.event_date %>
                <%= link_to availability_path(availability), method: :delete,
                  data: { confirm: "Really?!", toggle: "tooltip", placement: "top" } do %>
                  <small><i class="fa fa-trash"></i></small>
                  <% end %>
              </li>
            <% end %>
          </ul>

        <% else %>
          <h3 class="mb-5 mt-2 text-center"><%= Oh no! @cooker.first_name %> has no availabilities yet.</h3>
        <% end %>
      </div> <!-- closes the availabilities section -->


      </div> <!-- closes the display div that changes -->

      <!-- Modal for booking -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">

          <div class="modal-content" style="background-color: #F2F4F8;">

            <div class="modal-header">
              <h3 class="modal-title text-center" id="exampleModalCenterTitle">Booking</h3>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <%= simple_form_for @booking, url: user_bookings_path(current_user), method: :post do |f| %>
              <div class="modal-body" style="background-color: #F2F4F8;">
                <div class="form-group mb-0 mx-3 mt-3">
                  <%= f.input :number_of_meals,
                              :label => "How many meals would you like to have prepared?",
                              :collection => 3..50 %>

                    <div  class="d-flex justify-content-around">
                      <div class="mb-2" id="time">
                        Cooking Time: 100 min
                      </div>
                      <script type="text/javascript"> var cooker_price = <%= @cooker.price.nil? ? 0 : @cooker.price %>; </script>
                      <div class="mb-2" id="price-meals">
                        Total Price: <%= @cooker.price.nil? ? 0 : @cooker.price * 3 %> â‚¬
                      </div>
                    </div>

                    <label class="mt-3">When would you like <%= "#{@cooker.first_name.capitalize}"%> to come?</label>
                  <%= f.collection_radio_buttons :start_date, @availabilities, :good_availability_format, :good_availability_format, item_wrapper_class: :block_radio_button_collection %>
                </div>
              </div>
              <div class="modal-footer p-0">
                <%= f.submit :book, class: 'btn btn-effect btn-profile' %>
                <a class="btn" data-dismiss="modal">Close</a>
              </div>
            <% end %>

          </div> <!-- closes the modal-content -->
        </div>
      </div> <!-- closes the modal -->

    </div> <!-- closes right column -->

  </div> <!-- closes the profile layout -->
</div> <!-- closes the "profile" -->
