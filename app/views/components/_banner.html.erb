<div class="banner" id="top-home" style="background-image: linear-gradient(rgba(250,250,250,0.4),rgba(250,250,250,0.4)), url('https://images.unsplash.com/reserve/EnF7DhHROS8OMEp2pCkx_Dufer%20food%20overhead%20hig%20res.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1514&q=80');">
  <br>
  <h1 class="text-center">HOME CHEF</h1>
  <br>
  <br>
  <div class="text-center mx-3">
    <h6>Easy way to share your passion for cooking or have prep meals for your
    week.</h6>
    <br>
    <h6>Let's try !</h6>
  </div>

  <br>
  <br>
  <br>
  <div class="row d-flex px-2 justify-content-center">
    <%= link_to cookers_path do %>
      <button class="text-center btn-banner">
        <h3>I'm hungry!</h3>
      </button>
    <% end %>

    <% if user_signed_in? && current_user.is_a_cook? %>
      <%= link_to profile_path do %>
        <button class="text-center btn-banner" id="cooker">
          <h3>I'm cooking!</h3>
        </button>
      <% end %>

    <% elsif user_signed_in? && !current_user.is_a_cook? %>
      <%= link_to edit_user_registration_path do %>
        <button class="text-center btn-banner" id="cooker">
          <h3>I'm cooking!</h3>
        </button>
      <% end %>

    <% else %>
      <%= link_to new_user_session_path do %>
        <button class="text-center btn-banner" id="cooker">
          <h3>I'm cooking!</h3>
        </button>
      <% end %>

    <% end %>
  </div>

  <br>
  <h1 class="text-center"><i class="fas fa-angle-down"></i></h1>
</div>
