<div class="banner" style="background-image: linear-gradient(rgba(250,250,250,0.4),rgba(250,250,250,0.4)), url('https://images.unsplash.com/reserve/EnF7DhHROS8OMEp2pCkx_Dufer%20food%20overhead%20hig%20res.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1514&q=80');">
  <h1>HOME CHEF</h1>
  <br>
    <div class="text-center">
    <h6>Easy way to share your passion for cooking or have prep meals for your
    week.</h6>
    <br>
    <h6>Let's try !</h6>
  </div>

  <br>
  <br>
  <br>
  <br>

  <div class="d-flex justify-content-center">
    <div class="text-center btn-effect">
    <%= link_to cookers_path do %>
       <h3>I'm hungy!</h3>
      </div>
    <% end %>

      <% if user_signed_in? && current_user.is_a_cook? %>
      <div class="text-center btn-effect" id="cooker">
        <%= link_to profile_path do %>
            <h3>I'm cooking!</h3>
          </div>
        <% end %>
      <% elsif user_signed_in? && !current_user.is_a_cook? %>
      <div class="text-center btn-effect" id="cooker">
        <%= link_to edit_user_registration_path do %>
            <h3>I'm cooking!</h3>
          </div>
        <% end %>
      <% else %>
      <div class="text-center btn-effect" id="cooker">
        <%= link_to new_user_session_path do %>
            <h3>I'm cooking!</h3>
          </div>
        <% end %>
      <% end %>
  </div>

</div>
