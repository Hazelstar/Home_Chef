<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <button class="navbar-toggler" type="button" id="navbarDropdown" data-toggle="dropdown" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto navbar-toggler-icon" id="navbarDropdown" data-toggle="dropdown">
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to profile_path do %>
              <div class="dropdown-item btn-effect">
                  My account
              </div>
            <% end %>
            <%= link_to edit_user_registration_path do %>
              <div class="dropdown-item btn-effect">
                  Edit profile
              </div>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <div class="dropdown-item btn-effect">
                  Sign out
              </div>
            <% end %>

          <% else %>
            <%= link_to new_user_session_path do %>
              <div class="dropdown-item btn-effect">
                  Log In
              </div>
            <% end %>
            <%= link_to new_user_registration_path do %>
              <div class="dropdown-item btn-effect">
                  Sign Up
              </div>
            <% end %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>

