<div class="container">
    <div class="row">
      <div class="col-md-8">

        <% if @availabilities.any? %>
          <h1><%= @user.first_name %>, you are available:</h1>

            <div class="d-flex justify-content-center">
              <%= link_to new_user_availability_path(current_user.id) do %>
                <div class="text-center btn-effect">
                  <h3>Add availability</h3>
                </div>
                <% end %>
            </div>

          <ul>
            <% @availabilities.each do |availability| %>
              <li>
                <%= availability.event_date %>
                <%= link_to availability_path(availability), method: :delete,
                  data: { confirm: "Really?!", toggle: "tooltip", placement: "top" } do %>
                  <small><i class="fa fa-trash"></i></small>
                  <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="text-center">
            <h1><%= @user.first_name %>, please add an availability now:</h1>
          </div>
          <div class="d-flex justify-content-center">
            <%= link_to new_user_availability_path(current_user.id) do %>
              <div class="text-center btn-effect">
                <h3>Add availability</h3>
              </div>
            <% end %>
          </div>

        <% end %>
      </div>

       <div class="col-md-8">
        <%= render "components/image" %>
      </div>

    </div>
</div>


