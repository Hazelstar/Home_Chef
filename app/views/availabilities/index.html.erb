<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <br>
      <br>
      <br>

      <div>
        <h1><%= @user.first_name %>, you are available:</h1>
      </div>

      <div>
        <%= link_to new_user_availability_path(current_user.id), class: 'btn' do %>
          <div class="text-center btn-effect">
            <h6><i class="fa fa-plus"></i> Add availability!</h6>
          </div>
        <% end %>
      </div>

        <div>
          <ul>
        <% @availabilities.each do |availability| %>
          <li>
            <%= availability.event_date %>
            <%= link_to availability_path(availability), method: :delete,
              data: { confirm: "Really?!", toggle: "tooltip", placement: "top" } do %>
              <small><i class="fa fa-trash"></i></small>
              <% end %>
          </li>
        <% end %>
      </ul>
        </div>


    </div>
  </div>
</div>

